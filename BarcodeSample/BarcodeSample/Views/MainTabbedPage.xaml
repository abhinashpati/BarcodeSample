            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.ToolbarPlacement="Bottom"
            xmlns:views="clr-namespace:BarcodeSample.Views;assembly=BarcodeSample"
            xmlns:customControls="clr-namespace:BarcodeSample.CustomControls;assembly=BarcodeSample"
            TabBarBorderColor="DarkSlateGray"
            TabBarBorderThickness="1"
            TabBarMinimumHeight="60"
            ShowTabIconsOnly="True"
            x:Class="BarcodeSample.Views.MainTabbedPage" 
            SelectedTabColor="Silver"
