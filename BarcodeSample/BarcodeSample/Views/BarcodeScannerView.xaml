<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:googleVisionBarCodeScanner="clr-namespace:GoogleVisionBarCodeScanner;assembly=BarcodeScanner.XF"
             x:Class="BarcodeSample.Views.BarcodeScannerView">
    <googleVisionBarCodeScanner:CameraView x:Name="CameraView"
                                           HorizontalOptions="FillAndExpand"
                                           VerticalOptions="FillAndExpand"
                                           DefaultTorchOn="False"
                                           VibrationOnDetected="False"
                                           AutoStartScanning="True"
                                           RequestedFPS="30"
                                           ScanInterval="500"
                                           OnDetected="CameraView_OnOnDetected" />
</ContentView>